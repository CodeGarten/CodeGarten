@using CodeGarten.Data.Model
@model User
@{
    ViewBag.Title = Model.Name;
}
<div class="title">
    <img src="@Url.Content("~/Content/themes/smoothness/images/User.png")" alt="Profile" />
    <h2>
        @Model.Name</h2>
    <div class="clear">
    </div>
    @if (Model.Name == User.Identity.Name)
    {
        @Html.ActionLink("Profile", "Edit", new { userName = Model.Name }, null)
    }
</div>
<div id="userInfo">

    <h3>email: </h3>
    <p>@Model.Email</p>

</div>
<script type="text/javascript">
    $(document).ready(function () {
        $(".title a").button({ icons: { primary: "ui-icon-pencil"} });
    });
</script>
