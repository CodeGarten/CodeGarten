@model CodeGarten.Web.Model.StructureView
@{
    ViewBag.Title = "Create Structure";
}
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<div class="ui-widget" id="structure_create_form">
    @using (Html.BeginForm())
    {
        <div class="ui-widget-header ui-corner-top ui-state-default">
            <h2>
                Create Structure</h2>
        </div>
        <div class="ui-widget-content ui-state-highlight">
            <div class="editor-label">
                @Html.LabelFor(model => model.Name)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.Name)
                <div>
                    @Html.ValidationMessageFor(model => model.Name)
                </div>
            </div>
            <div class="editor-label">
                @Html.LabelFor(model => model.Description) (Optional)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.Description)
                <div>
                    @Html.ValidationMessageFor(model => model.Description)
                </div>
            </div>
            <div class="editor-label">
                @Html.LabelFor(model => model.Public)
            </div>
            <div class="editor-field">
                @Html.CheckBoxFor(model => model.Public)
                <div>
                    @Html.ValidationMessageFor(model => model.Public)
                </div>
            </div>
            <p>
                <input type="submit" value="Create" />
            </p>
        </div>
    }
</div>
