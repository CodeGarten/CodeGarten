@using CodeGarten.Data.Access
@{
    var dataBaseManager = (DataBaseManager)Context.Items["DataBaseManager"];
}
@*<script src="../../Scripts/jquery.swfobject.js" type="text/javascript"></script>
<script src="../../Scripts/jquery.sifr.js" type="text/javascript"></script>*@
<div id="anonymous_home">
    <div class="top">
        <h1>
            Design, Enroll, Develop.</h1>
        <div class="caracteristics">
            <div>
                Have fun<span class="count">!</span></div>
            <div>
                <span class="count">@(dataBaseManager.User.GetAll().Count())</span> Users</div>
            <div>
                Hosting <span class="count">@(dataBaseManager.Structure.GetAll().Count())</span>
                Structures</div>
            <div>
                Providing <span class="count">@(dataBaseManager.Service.GetAll().Count())</span>
                Services</div>
        </div>
    </div>
    <div id="introduction">
    </div>
</div>
<script type="text/javascript">
    $("#anonymous_home .caracteristics div").hide();
    $("#anonymous_home .caracteristics div").first().show();

    setInterval(function () {
        var element = $("#anonymous_home .caracteristics").children().filter(":visible");

        $(element).hide("slide", { direction: 'left' }, 'normal', function () {
            var next = $(element).next().length > 0 ? $(element).next() : $("#anonymous_home .caracteristics div").first();
            $(next).show("slide", { direction: 'right' }, 'slow');
        });
    }, 3000);
</script>
