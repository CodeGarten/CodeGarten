@model CodeGarten.Web.Model.ContainerTypeView
@using (Ajax.BeginRouteForm("Default",
                                              new { controller = "ContainerType", action = "Create", structureId = Request.RequestContext.RouteData.Values["id"] },
                                              new AjaxOptions() { OnSuccess = "StructureView.ContainerPrototypeFormDialog.OnSuccessCallBack" }))
{
    <h2>
        Create container type
    </h2>
    <div class="editor-hidden">
        <input type="hidden" name="parent" />
    </div>
    <div class="editor-label">
        @Html.LabelFor(model => model.Name)
    </div>
    <div class="editor-field">
        @Html.EditorFor(model => model.Name)
        @Html.ValidationMessageFor(model => model.Name)
    </div>
    <p>
        <input type="submit" value="Create" />
        <input type="reset" value="Clean" />
    </p>
    
}